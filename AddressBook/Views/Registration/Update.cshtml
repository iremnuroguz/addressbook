@model  AddressBook.Models.Entity.Registration
@{
    ViewBag.Title = "Guncelle";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Update", "Registration", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <form class="form-group" method="post">
        <div>
            <table class="table-bordered">
                @Html.ValidationSummary()
                <tr>
                    <th>Fotoğraf</th>
                    <td>
                        @Html.TextBox("file", "", new { type = "file", @class = "form-control" })
                    </td>
                    @if (Model.Image != null)
                    {
                        var Base64 = Convert.ToBase64String(Model.Image);
                        var Image = string.Format("data:image/gif;base64,{0}", Base64);
                        <td><img src="@Image" class="img-thumbnail" width="128" height="128" /></td>
                    }
                    else
                    {
                        <td>
                            Fotoğraf Yok
                        </td>
                    }

                </tr>
                <tr>
                    <th>İsim</th>
                    <td><input type="text" class="form-control" name="Name" value="@Model.Name" /></td>
                </tr>
                <tr>
                    <th>Soyisim</th>
                    <td><input type="text" class="form-control" name="Surname" value="@Model.Surname" /></td>
                </tr>
                <tr>
                    <th>Telefon 1</th>
                    <td><input type="text" class="form-control" name="Phone1" value="@Model.Phone1" /></td>
                </tr>
                <tr>
                    <th>Telefon 2</th>
                    <td><input type="text" class="form-control" name="Phone2" value="@Model.Phone2" /></td>
                </tr>
                <tr>
                    <th>Mail 1</th>
                    <td><input type="email" class="form-control" name="Mail1" value="@Model.Mail1" /></td>
                </tr>
                <tr>
                    <th>Mail 2</th>
                    <td><input type="email" class="form-control" name="Mail2" value="@Model.Mail2" /></td>
                </tr>
                <tr>
                    <th>Adres 1</th>
                    <td><input type="text" class="form-control" name="Adress1" value="@Model.Adress1" /></td>
                </tr>
                <tr>
                    <th>Adres 2</th>
                    <td><input type="text" class="form-control" name="Adress2" value="@Model.Adress2" /></td>
                </tr>
            </table>
        </div>
        <br />
        <div>
            <button type="submit" class="btn btn-success">Güncelle</button>
        </div>
    </form>
}

